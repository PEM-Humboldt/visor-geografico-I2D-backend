# Django Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Django Settings
DEBUG=true
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=i2dbackend.settings.local

# Database Configuration (PostGIS)
DB_ENGINE=django.contrib.gis.db.backends.postgis
DB_NAME=humboldt_i2d
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432
DB_OPTIONS=-c search_path=django,gbif_consultas,capas_base,geovisor

# Server Configuration
ALLOWED_HOSTS=0.0.0.0,localhost,127.0.0.1
PORT=8001

# Static Files
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media

# CORS Configuration (Development)
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:3000

# GeoServer Configuration (for layer management)
GEOSERVER_URL=https://geoservicios.humboldt.org.co/geoserver
GEOSERVER_WORKSPACE_DEFAULT=Historicos
GEOSERVER_WORKSPACE_CAPAS_BASE=Capas_Base
GEOSERVER_WORKSPACE_GEF_PARAMOS=gefparamos
GEOSERVER_WORKSPACE_FONDO_ADAPTACION=Proyecto_fondo_adaptacion
GEOSERVER_WORKSPACE_CONSERVACION=Proyecto_PACBAO_Ecopetrol

# Project Configuration
DEFAULT_PROJECT=general
DEFAULT_ZOOM_LEVEL=6.0
DEFAULT_CENTER_X=-8113332.0
DEFAULT_CENTER_Y=464737.0

# API Configuration
API_VERSION=v1
API_TITLE=Visor I2D API
API_DESCRIPTION=Colombian Biodiversity Data API - Instituto Alexander von Humboldt

# Layer Groups Configuration
# These correspond to the layer groups we configured for the general project
LAYER_GROUPS_ENABLED=true
LAYER_GROUPS_COUNT=5

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
READINESS_CHECK_DB=true
LIVENESS_CHECK_INTERVAL=30

# Logging Configuration
LOG_LEVEL=INFO
REQUEST_LOGGING=true
DATA_QUALITY_CHECKS=true

# Security Configuration
SECURITY_HEADERS=true
API_VERSIONING=true
ERROR_HANDLING=true

# Production Override Settings (for production deployment)
# DEBUG=false
# ALLOWED_HOSTS=i2d.humboldt.org.co,web,localhost
# CORS_ALLOWED_ORIGINS=https://i2d.humboldt.org.co,http://i2d.humboldt.org.co/visor-I2D/
